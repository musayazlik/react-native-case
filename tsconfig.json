{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@firebase": ["./libs/firebase"],
      "@/types": ["./types/*"],
      "@/components": ["./components/*"],
      "@/screens": ["./screens/*"],
      "@/hooks": ["./hooks/*"],
      "@/data": ["./data/*"],
      "@/constants/*": ["./constants/*"],
      "@/helpers/*": ["./helpers/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/fgdg.tsx"
  ]
}
